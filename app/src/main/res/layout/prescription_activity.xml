<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PrescriptionActivity">


    <!--Title-->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Prescription"
        android:textColor="#ff6666"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu" />

    <TextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_marginStart="50dp"
        android:gravity="left"
        android:padding="5dp"
        android:text="How can we help you today?"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstmenu"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="300dp">
    -->
    <ImageView
        android:id = "@+id/info"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="50dp"
        android:src="@drawable/more_info1" />

    <ImageView
        android:id = "@+id/appointment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="50dp"
        android:src="@drawable/appointment" />
    <!--
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/secondmenu"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="150dp">
    -->
    <ImageView
        android:id = "@+id/prescription"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="50dp"
        android:src="@drawable/prescription_64" />

    <ImageView
        android:id = "@+id/records"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/medical_records1"
        android:layout_margin="50dp" />
    <!--
        </LinearLayout>
    -->

</RelativeLayout>